---
import { t } from "@src/i18n/config.i18n";
import DesktopNav from "@src/components/navigation/DesktopNav.astro";
import MobileMenuButton from "@src/components/navigation/MobileMenuButton.astro";
---

<header class="bg-blue-600 dark:bg-blue-800 text-white p-4 md:p-6 shadow-lg dark:shadow-gray-900/30">
    <div class="container mx-auto flex justify-between items-center">
        <!-- Logo/Title -->
        <h1 class="text-xl md:text-2xl font-bold">
            <a href="/" class="hover:text-blue-200 dark:hover:text-blue-300 transition-colors">
                {t("title")}
            </a>
        </h1>

        <!-- Desktop Navigation -->
        <DesktopNav />

        <!-- Mobile Menu Button -->
        <MobileMenuButton />
    </div>
</header>
